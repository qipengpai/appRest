<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.platform.restapi.dao.loan.OrganizationMapper">

	<select id="getOrgInfoByPrimaryKey" resultType="com.company.platform.restapi.model.loan.OrganizationInfo"
		parameterType="java.lang.String">
		SELECT
			id,
			orgName,
			orgCode,
			pid,
			eLevel,
			isLeaf,
			isValid,
			eSort,
			eType,
			updateTime
		FROM
			organization
		WHERE
			id = #{orgId, jdbcType=VARCHAR}
	</select>
	
</mapper>